<% layout('boilerplate') %>

<style>
.search-results {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    margin: 20px;
    gap: 20px;
}

.card-s {
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background-color: white;
}

.card-s:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
}

.card-link-s {
    display: block;
    text-decoration: none;
    color: inherit;
}

.card-image-s img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-bottom: 1px solid #ddd;
}

.card-body-s {
    padding: 15px;
}

.card-title-s {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #333;
}

.card-description-s {
    font-size: 14px;
    color: #666;
    line-height: 1.5;
    margin-bottom: 15px;
}
</style>

<h1 class="m-3">Search Results for "<%= query %>"</h1>

<% if (places.length > 0) { %>
    <div class="search-results">
        <% places.forEach(place => { %>
            <div class="card-s">
                <a href="/places/<%= place.slug %>" class="card-link-s">
                    <div class="card-image-s">
                        <% if (place.banner_image) { %>
                            <img src="<%= place.banner_image %>" alt="<%= place.name %>" />
                        <% } else { %>
                            <img src="/images/default-banner.jpg" alt="Default Banner" />
                        <% } %>
                    </div>
                    
                    <div class="card-body-s">
                        <h3 class="card-title-s"><%= place.name %></h3>
                        <p class="card-description-s"><%= place.description.substring(0, 150) %>...</p>
                    </div>
                </a>
            </div>
        <% }) %>
    </div>
<% } else { %>
    <p>No places found matching your search criteria.</p>
<% } %>