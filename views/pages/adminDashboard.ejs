<% layout('boilerplateAdmin') %>

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.css" />

<div class="container mt-5">
  <h2 class="mb-4">Admin Dashboard</h2>

  <div class="table-responsive">
    <table id="inquiryTable">
      <thead>
        <tr>
          <th>Sr.No.</th>
          <th>Name</th>
          <th>Mobile No.</th>
          <th>Email</th>
          <th>Departure Date</th>
          <th>Return Date</th>
          <th>Address</th>
          <th>Destination Address</th>
          <th>Additional Details</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (inquiries.length > 0) { %>
          <% inquiries.forEach((inq) => { %>
            <tr>
              <td><%= inq.id %></td>
              <td><%= inq.firstname %> <%= inq.lastname %></td>
              <td><%= inq.phoneNo %></td>
              <td><%= inq.email %></td>
              <td><%= new Date(inq.departureDate).toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' }) %></td>
              <td><%= new Date(inq.returnDate).toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' }) %></td>
              <td><%= inq.address %></td>
              <td><%= inq.destinationAddress %></td>
              <td><%= inq.additionalDetails ? inq.additionalDetails : "-" %></td>

              <td>
                <button class="btn btn-sm btn-outline-primary"><i class="fa-solid fa-plus"></i></button>
                <button class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-eye"></i></button>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7" class="text-center">No inquiries found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- jQuery & DataTables -->
<script src="https://code.jquery.com/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
<script>
  new DataTable('#inquiryTable');
</script>
